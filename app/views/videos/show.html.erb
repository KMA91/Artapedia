<a href="/videos">Home</a>
<br>
<%= @video.title %>
<br>
<div style="position:relative;height:0;padding-bottom:56.25%"><iframe src="https://www.youtube.com/embed/<%= @video.uid %>?ecver=2" width="640" height="360" frameborder="0" style="position:absolute;width:100%;height:100%;left:0" allowfullscreen></iframe></div>
<br>
<form action = "/comments" method = "post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>Comment: <input type="text" name="comment[content]"></p>
	<input type="submit" value = "Submit">
</form>

<% @comments.all.each do |comment| %>

		<div class="col-sm-8">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left meta">
                        <div class="title h5">
                            <a href="#"><b><%= comment.user.username %></b></a>
                            made a post.
                        </div>
                        <h6 class="text-muted time"><%= comment.created_at %></h6>
                    </div>
                </div>
                <div class="post-description">
                    <p><%= comment.content %></p>
                    <div class="stats">
                        <a href="/likes/<%= @video.id %>" data-method="post" class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-up icon"></i>
                            <!-- put likes.count -->
                        </a>
                        <a href="/unlikes/<%= @video.id %>" data-method="post" class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-down icon"></i>
                            <!-- put dislikes.count -->
                        </a>
                    </div>
                </div>
            </div>
        </div>

