<div style="position:relative;height:0;padding-bottom:56.25%"><iframe src="https://www.youtube.com/embed/<%= @video.uid %>?ecver=2" width="640" height="360" frameborder="0" style="position:absolute;width:100%;height:100%;left:0" allowfullscreen></iframe></div>
<br>
<% unless Video.find(<%= @video.id %>).users %>
<p><%= @video.likes.count %>
	<a href="/likes/<%= @video.id %>" data-method="post" class="btn btn-default stat-item"><span class="glyphicon glyphicon glyphicon-thumbs-up"></span></a>
	<%= @video.unlikes.count %>
	<a href="/unlikes/<%= @video.id %>" data-method="post" class="btn btn-default stat-item"><span class="glyphicon glyphicon glyphicon-thumbs-down"></span></a>
</p>

<div class-"video">
  <div style="position:relative;height:0;padding-bottom:56.25%"><iframe src="https://www.youtube.com/embed/<%= @video.uid %>?ecver=2" width="640" height="360" frameborder="0" style="position:absolute;width:100%;height:100%;left:0" allowfullscreen></iframe>
  </div> 
  <br>
  <h3 style="font-family:Century Gothic, sans-serif"><%= @video.title %></h3>
  <br>

  <div class = "form-group">
    <div class= "col-sm-10">
      <form action = "/comments" method = "post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <textarea class="form-control" rows="4" name="comment[content]"></textarea>
        <button class="btn btn-success btn-outline" type="submit">Comment Here!</button>
    </form>
  </div>


  <% @comments.all.each do |comment| %>

<div class="row">
        <div class="col-sm-8">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left meta">
                        <div class="title h5">
                            <a href="#"><b><%= comment.user.username %></b></a>
                            made a post.
                        </div>
                        <h6 class="text-muted time"><%= comment.created_at %></h6>
                    </div>
                </div>
                <div class="post-description">
                    <p><%= comment.content %></p>
                    <div class="stats">

                            <i class="fa fa-thumbs-up icon"></i>
                            <!-- put likes.count -->
                        </a>

                            <i class="fa fa-thumbs-down icon"></i>
                            <!-- put dislikes.count -->
                        </a>
                    </div>
                </div>
            </div>
        </div>
  </div>

